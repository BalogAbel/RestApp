<controls:MetroWindow x:Class="RestApp.Restaurant.AddRestaurant.AddRestaurantView"
    xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:RestApp.Restaurant.AddRestaurant"
    mc:Ignorable="d"
     Width="277" Height="240" ResizeMode="NoResize"
    Title="Add restaurant"
    GlowBrush="{DynamicResource AccentColorBrush}">

    <StackPanel VerticalAlignment="Center" Margin="0,20,0,40">
        <TextBlock TextAlignment="Center" FontSize="23" Margin="5" TextWrapping="Wrap">Add restaurant</TextBlock>
        <TextBox Width="160" Margin="5" controls:TextBoxHelper.Watermark="name of the restaurant"
                 x:Name="RestaurantName" />
        <Button Width="80" x:Name="Add">Add</Button>
        <Button Width="80" x:Name="Cancel" Margin="20">Cancel</Button>
    </StackPanel>
</controls:MetroWindow>