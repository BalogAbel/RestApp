<Window x:Class="RestApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RestApp"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <Grid x:Name="GridPlace" HorizontalAlignment="Left" Height="100" Margin="152,112,0,0" VerticalAlignment="Top" Width="100">
            <Grid.Resources>
                <Style TargetType="{x:Type Border}" x:Key="Empty">
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="Background" Value="White"></Setter>
                </Style>
                <Style TargetType="{x:Type Border}" x:Key="Seat">
                    <Setter Property="BorderBrush" Value="Black" />
                    <Setter Property="BorderThickness" Value="1" />
                    <Setter Property="Background" Value="Orange"></Setter>
                </Style>
                <Style TargetType="{x:Type Border}" x:Key="Table">
                    <Setter Property="Background" Value="CadetBlue"></Setter>
                </Style>
            </Grid.Resources>
        </Grid>

    </Grid>
</Window>
