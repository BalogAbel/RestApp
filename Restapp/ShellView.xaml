<controls:MetroWindow
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="http://metro.mahapps.com/winfx/xaml/controls" xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="RestApp.ShellView"
        Width="277" Height="330" ResizeMode="NoResize"
        GlowBrush="{DynamicResource AccentColorBrush}"
        Title="RestApp - Login">

        <StackPanel VerticalAlignment="Center" Margin="0,20,0,40"> 
            <TextBlock TextAlignment="Center" FontSize="23" Margin="0,0,0,0" TextWrapping="Wrap" >Welcome to RestApp, please log in!</TextBlock>
            <TextBlock Height="30" x:Name="Message"/>
            <TextBox Width="160" Margin="5" controls:TextBoxHelper.Watermark="username" x:Name="UserName"/>
            <TextBox Width="160" Margin="5,5,5,10"  controls:TextBoxHelper.Watermark="Password" x:Name="Password" />
            <Button Width="80" x:Name="Login">Login</Button>
            <Button Width="80"  Margin="20">Register</Button>
    </StackPanel>

</controls:MetroWindow>